{% set thematiques = collections.all | eleventyNavigationExtended("guideBpNr") %}

<p>
    <time class="fr-tag" datetime="{{ date | htmlDateString }}">Publié le {{ date | readableDate }}</time>
    <a class="fr-link fr-fi-download-line fr-link--icon-left" href="#">Télécharger en PDF</a>
    <a class="fr-link fr-fi-download-line fr-link--icon-left" href="/publications/bonnes-pratiques/referentiel-bonnes-pratiques-numerique-responsable-export.csv">Exporter en CSV</a>
    <a class="fr-link fr-fi-download-line fr-link--icon-left" href="#">Flux JSON</a>
</p>

<nav class="fr-summary" role="navigation" aria-labelledby="fr-summary-title">
    <h6 class="fr-summary__title" id="fr-summary-title">Thématiques</h6>
    <ol class="fr-summary__list">
    {% for thematique in thematiques %}
        <li>
            <a class="fr-summary__link" href="#{{ thematique.key }}">{{ thematique.title }}</a>
        </li>
    {% endfor %}
    </ol>
</nav>

<h6>Filtrer les exemples de bonnes pratiques</h6>
<form>
<div class="fr-grid-row fr-grid-row--gutters fr-grid-row--top">
    <div class="fr-col-12 fr-col-md-4">
        <div class="fr-form-group">
            <label class="fr-label" for="form-priority">Priorité</label>
            <select class="fr-select" id="form-priority" name="priority">
                <option value="" selected>Toutes</option>
                <option>Prioritaire</option>
                <option>Recommandée</option>
                <option>Aller plus loin</option>
            </select>
        </div>
    </div>
    <div class="fr-col-12 fr-col-md-4">
        <div class="fr-form-group">
            <label class="fr-label" for="form-difficulty">Difficulté de mise en oeuvre</label>
            <select class="fr-select" id="form-difficulty" name="difficulty">
                <option value="" selected>Toutes</option>
                <option>Facile</option>
                <option>Moyenne</option>
                <option>Difficile</option>
            </select>
        </div>
    </div>
    <div class="fr-col-12 fr-col-md-4">
        <div class="fr-form-group">
            <label class="fr-label" for="form-who">Qui est pilote</label>
            <select class="fr-select" id="form-who" name="who">
                <option value="" selected>Toutes</option>
                <option>Achats</option>
                <option>Chef de projet</option>
                <option>Décideurs</option>
                <option>Délégué à la protection des données</option>
                <option>Délégué au numérique responsable</option>
                <option>Direction du numérique</option>
                <option>Logistique</option>
                <option>Responsable produit</option>
                <option>Ressources Humaines</option>
            </select>
        </div>
    </div>
</div>
</form>

{% set thematiquesContent = collections.guideBpNrThematique %}

{% for thematique in thematiques %}
    <h2 id="{{ thematique.key }}">{{ thematique.title }}</h2>

    {% for thematiqueContent in thematiquesContent %}
        {% if thematiqueContent.url == thematique.url %}
            <section class="fr-accordion fr-mb-1w">
                <h3 class="fr-accordion__title">
                    <button class="fr-accordion__btn" aria-expanded="false" aria-controls="introduction-{{ thematique.key }}">Introduction</button>
                </h3>
                <div class="fr-collapse" id="introduction-{{ thematique.key }}">
                    {{ thematiqueContent.templateContent | safe }}    
                </div>
            </section>
        {% endif %}
    {% endfor %}

    <ul>
    {% for bonnePratique in thematique.children %}
        <li data-type="sheet" data-priority="{{ bonnePratique.data.priority }}" data-difficulty="{{ bonnePratique.data.difficulty }}" data-who="{{ bonnePratique.data.who }}"><small>{{ bonnePratique.data.idbp }}</small> – <a href="{{ bonnePratique.url }}">{{ bonnePratique.data.title }}</a></li>
    {% endfor %}
    </ul>
{% endfor %}
