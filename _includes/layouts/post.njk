---
layout: layouts/base.njk
---

{% include "breadcrumb.njk" %}

<div class="fr-grid-row fr-grid-row--gutters fr-grid-row--top">
  <div class="fr-col-12 fr-col-md-8 fr-col-offset-md-2">
    <h1>{{ title }}</h1>

    {%- if date %}
      <p><time class="fr-tag" datetime="{{ date | htmlDateString }}">Mise Ã  jour le {{ date | readableDate }}</time></p>
    {% endif %}

    {{ content | safe }}

    {%- if link %}
      <div class="fr-grid-row fr-grid-row--gutters">
          <div class="fr-col-12">
              <div class="fr-card fr-card--horizontal fr-enlarge-link">
                  <div class="fr-card__body">
                      <h2 class="fr-card__title">
                          <a href="{{ link }}" class="fr-card__link">{{ linkTitle }}</a>
                      </h2>
                  </div>
                  {%- if image or linkImage %}
                  <div class="fr-card__img">
                      <img src="{{ image or linkImage }}" alt="">
                  </div>
                  {% endif %}
              </div>
          </div>
      </div>
    {% endif %}
  </div>
</div>
